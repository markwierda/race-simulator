<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        xmlns:Model="clr-namespace:Model;assembly=Model" x:Class="WpfApp.CompetitionStats"
        mc:Ignorable="d"
        Title="CompetitionStats" Height="450" Width="800">
    <Grid>
        <ListView Name="BestPoints" Margin="0,0,400,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Participant.Name}" />
                    <GridViewColumn Header="Points" Width="200" DisplayMemberBinding="{Binding Points}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Force update" HorizontalAlignment="Left" Width="100" Height="50"  Margin="559,0,0,0" VerticalAlignment="Center" Click="Button_Click" />
    </Grid>
</Window>